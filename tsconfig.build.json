{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["**/*.test.ts"],
  "typeRoots": ["./types/"]
}
